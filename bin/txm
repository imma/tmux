#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "${BLOCK_PATH:-"$shome/work"}/block/script/profile" ~
  source normalize  

  export BUNDLE_GEMFILE="$shome/Gemfile"
  case "${1:-}" in
    start|edit)
      if [[ -z "${2:-}" ]]; then
        set -- default
      fi
      ;;
  esac

  : ${EDITOR:=vim}
  export EDITIOR
  bundle exec tmuxinator "$@"
}

source sub "$BASH_SOURCE" "$@"
