#!/usr/bin/env bash

function main {
  set -efu

  cd
  source ".bash_profile"

  ln -nfs "${SSH_AUTH_SOCK}" "$HOME/.ssh/ssh_auth_sock"

  case "${CUE_SCHEME:-}" in
    slight|sdark)
      mkdir -p "${HOME}/.env.d"
      trap "rm -f ${HOME}/.env.d/CUE_SCHEME" EXIT
      echo "${CUE_SCHEME}" > "${HOME}/.env.d/CUE_SCHEME"
      ;;
  esac

  exec tmux -CC "$@"
}

source sub "$BASH_SOURCE" "$@"
