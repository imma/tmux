#!/usr/bin/env bash

function main {
  set -efu

  cd
  source ".bash_profile"

  ln -nfs "${SSH_AUTH_SOCK}" "$HOME/.ssh/ssh_auth_sock"

  local nm_session="$1"; shift

  if tmux has-session -t "${nm_session}" 2>/dev/null; then
    exec tmux -CC attach -t "${nm_session}"
  fi

  exec txm start "${nm_session}"
}

source sub "$BASH_SOURCE" "$@"
